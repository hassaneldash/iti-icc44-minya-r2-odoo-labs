<odoo>
    <data>
        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">hms.patient.form</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="history" attrs="{'invisible': [('age', '&lt;', 50)]}"/>
                            <field name="cr_ratio" attrs="{'required': [('pcr', '=', True)]}"/>
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="image"/>
                            <field name="address"/>
                            <field name="age" readonly="1"/>
                            <field name="state"/>
                            <field name="department_id"/>
                            <field name="doctor_ids" widget="many2many_tags" attrs="{'readonly': [('department_id', '=', False)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_patient_tree" model="ir.ui.view">
            <field name="name">hms.patient.tree</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="age"/>
                </tree>
            </field>
        </record>


        <record id="action_hms_patient_all" model="ir.actions.act_window">
            <field name="name">All Patients</field>
            <field name="res_model">hms.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>