<odoo>
    <data>
        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">hms.patient.form</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="history"/>
                            <field name="cr_ratio"/>
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="image"/>
                            <field name="address"/>
                            <field name="age"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_patient_tree" model="ir.ui.view">
            <field name="name">hms.patient.tree</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="birth_date"/>
                    <field name="age"/>
                </tree>
            </field>
        </record>


        <menuitem id="hms" name="Hospitals Management System"/>
        <menuitem id="menu_hms_patient_all" name="All Patients" parent="hms" action="action_hms_patient_all"/>

        <record id="action_hms_patient_all" model="ir.actions.act_window">
            <field name="name">All Patients</field>
            <field name="res_model">hms.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>