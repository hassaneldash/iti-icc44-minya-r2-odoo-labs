<odoo>
    <data>
        <record id="patient_form_view" model="ir.ui.view">
            <field name="name">hms.patient.form.view</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_add_log" type="object" class="btn-info" string="Add New Log"/>
                        <button name="action_undetermined" type="object" class="btn-primary" string="Undetermined"/>
                        <button name="action_good" type="object" class="btn-success" string="Good"/>
                        <button name="action_fair" type="object" class="btn-warning" string="Fair"/>
                        <button name="action_serious" type="object" class="btn-danger" string="Serious"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="history"/>
                            <field name="cr_ratio" required="context.get('pcr', False)"/>
                            <field name="blood_type"/>
                            <field name="rhesus_protein"/>
                            <field name="pcr"/>
                            <field name="image"/>
                            <field name="address"/>
                            <field name="age" readonly="1"/>
                            <field name="state"/>
                            <field name="department_id"/>
                            <field name="department_capacity"/>
                            <field name="doctor_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="patient_tree_view" model="ir.ui.view">
            <field name="name">hms.patient.tree.view</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="age"/>
                    <field name="department_id"/>
                    <field name="department_capacity"/>
                    <field name="doctor_ids"/>
                    <field name="state" widget="badge"
                           decoration-primary="state == 'undetermined'"
                           decoration-success="state == 'good'"
                           decoration-warning="state == 'fair'"
                           decoration-danger="state == 'serious'"/>
                </tree>
            </field>
        </record>


        <record id="action_hms_patient_all" model="ir.actions.act_window">
            <field name="name">All Patients</field>
            <field name="res_model">hms.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_hms_patient_all" name="All Patients" parent="menu_root_patient"
                  action="action_hms_patient_all"/>
    </data>
</odoo>