<odoo>
    <data>
        <record id="department_form_view" model="ir.ui.view">
            <field name="name">hms.department.form.view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="capacity"/>
                            <field name="is_opened"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="department_tree_view" model="ir.ui.view">
            <field name="name">hms.department.tree.view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                </tree>
            </field>
        </record>


        <record id="action_hms_department_all" model="ir.actions.act_window">
            <field name="name">All Departments</field>
            <field name="res_model">hms.department</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_hms_department_all" name="All Departments" parent="menu_root_department"
                  action="action_hms_department_all"/>
    </data>
</odoo>